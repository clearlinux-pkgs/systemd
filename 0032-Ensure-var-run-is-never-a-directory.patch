Subject: [PATCH 32/38] Ensure /var/run is never a directory.

---
 src/core/mount-setup.c | 8 ++++++++
 1 file changed, 8 insertions(+)

diff --git a/src/core/mount-setup.c b/src/core/mount-setup.c
index e49bd0b8c..082c234da 100644
--- a/src/core/mount-setup.c
+++ b/src/core/mount-setup.c
@@ -399,11 +399,19 @@ static int nftw_cb(
 
 int mount_setup(bool loaded_policy) {
         int r = 0;
+        struct stat sb;
 
         r = mount_points_setup(ELEMENTSOF(mount_table), loaded_policy);
         if (r < 0)
                 return r;
 
+        r = lstat("/var/run", &sb);
+        if (r == 0 && sb.st_mode & S_IFDIR) {
+                char path[256];
+                sprintf(path, "/var/run.%i", (int)time(NULL));
+                rename("/var/run", path);
+        }
+
