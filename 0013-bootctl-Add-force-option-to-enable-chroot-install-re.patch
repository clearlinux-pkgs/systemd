 src/boot/bootctl.c | 14 ++++++++++++--
 1 file changed, 12 insertions(+), 2 deletions(-)

diff --git a/src/boot/bootctl.c b/src/boot/bootctl.c
index ddc267401f..f43088d313 100644
--- a/src/boot/bootctl.c
+++ b/src/boot/bootctl.c
@@ -64,6 +64,8 @@ static const char *arg_dollar_boot_path(void) {
         return arg_xbootldr_path ?: arg_esp_path;
 }
 
+static bool arg_force = false;
+
 static int acquire_esp(
                 bool unprivileged_mode,
                 uint32_t *ret_part,
@@ -1068,6 +1070,8 @@ static int parse_argv(int argc, char *argv[]) {
         enum {
                 ARG_ESP_PATH = 0x100,
                 ARG_BOOT_PATH,
+                ARG_PRINT_BOOT_PATH,
+                ARG_FORCE,
                 ARG_VERSION,
                 ARG_NO_VARIABLES,
                 ARG_NO_PAGER,
@@ -1076,6 +1080,7 @@ static int parse_argv(int argc, char *argv[]) {
         static const struct option options[] = {
                 { "help",            no_argument,       NULL, 'h'                 },
                 { "version",         no_argument,       NULL, ARG_VERSION         },
+                { "force",           no_argument,       NULL, ARG_FORCE           },
                 { "esp-path",        required_argument, NULL, ARG_ESP_PATH        },
                 { "path",            required_argument, NULL, ARG_ESP_PATH        }, /* Compatibility alias */
                 { "boot-path",       required_argument, NULL, ARG_BOOT_PATH       },
@@ -1136,6 +1141,10 @@ static int parse_argv(int argc, char *argv[]) {
                         arg_pager_flags |= PAGER_DISABLE;
                         break;
 
+                case ARG_FORCE:
+                        arg_force = true;
+                        break;
+
                 case '?':
                         return -EINVAL;
 
@@ -1534,7 +1543,7 @@ static int verb_install(int argc, char *argv[], void *userdata) {
 
         (void) sync_everything();
 
-        if (arg_touch_variables)
+        if (arg_touch_variables && !arg_force)
                 r = install_variables(arg_esp_path,
                                       part, pstart, psize, uuid,
                                       "/EFI/systemd/systemd-boot" EFI_MACHINE_TYPE_NAME ".efi",
@@ -1588,13 +1597,14 @@ static int verb_remove(int argc, char *argv[], void *userdata) {
                         r = q;
 
                 q = remove_machine_id_directory(arg_xbootldr_path, machine_id);
+
                 if (q < 0 && r >= 0)
                         r = q;
         }
 
         (void) sync_everything();
 
-        if (!arg_touch_variables)
+        if (!arg_touch_variables || arg_force)
                 return r;
 
         q = remove_variables(uuid, "/EFI/systemd/systemd-boot" EFI_MACHINE_TYPE_NAME ".efi", true);
